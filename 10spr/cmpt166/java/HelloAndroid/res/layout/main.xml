<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
	<TextView android:text="@string/hello" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/toplabel"></TextView>
	
	<EditText android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/type_here"
		android:textSize="@dimen/text_size" android:typeface="serif"
		android:textStyle="italic" android:id="@+id/message"></EditText>

<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/clickMe" android:text="@string/click_me_please"></Button>
</LinearLayout>
